@model IEnumerable<UniversityManagementSystemApp.Models.TeacherCourseAssign>

@{
    ViewBag.Title = "ViewCourseStatus";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.Code)
        </th>
        <th>
            @Html.DisplayName("Name/Title")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.Semester)
        </th>

        <th>
            @Html.DisplayName("Assigned to")
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Semester.SemesterId)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Teacher.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TeacherCourseAssignId }) |
                @Html.ActionLink("Details", "Details", new { id = item.TeacherCourseAssignId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TeacherCourseAssignId })
            </td>
        </tr>
    }
</table>
